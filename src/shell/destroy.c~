#include <assert.h>
#include <unistd.h>
#include "shell.h"

int	sh_destroy(struct s_shell *shell)
{
  assert(shell != NULL);
  if (shell->fd[0] != STDIN_FILENO)
    {
      if (close(shell->fd[0]) == -1)
	return (-1);
    }
  if (shell->fd[1] != STDOUT_FILENO)
    {
      if (close(shell->fd[1]) == -1)
	return (-1);
    }
  if (shell->fd[2] != STDERR_FILENO)
    {
      if (close(shell->fd[2]) == -1)
	return (-1);
    }
  return (0);
}
