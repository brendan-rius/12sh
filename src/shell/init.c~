#include <assert.h>
#include <unistd.h>
#include "shell.h"

int	sh_init(struct s_shell *shell)
{
  assert(shell != NULL);
  shell->exit = false;
  shell->piped = false;
  shell->returnvalue = 0;
  shell->fd[0] = STDIN_FILENO;
  shell->fd[1] = STDOUT_FILENO;
  shell->fd[2] = STDERR_FILENO;
  return (0);
}
